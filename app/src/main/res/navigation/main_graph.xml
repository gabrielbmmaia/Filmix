<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.filmix.presentation.filmFragment.HomeFragment"
        android:label="Filmix"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.filmix.presentation.detailsFragment.DetailsFragment"
        android:label="Detalhes"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="filmId"
            app:argType="string" />
    </fragment>
</navigation>