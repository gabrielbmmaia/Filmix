<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.filmix.domain.model.Film" />

        <variable
            name="film"
            type="Film" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="?attr/colorOnPrimary"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/film_poster_image"
                loadImageFromUrl="@{film}"
                android:layout_width="140dp"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/film_title"
                style="@style/TextAppearance.AppCompat.Headline2"
                filmTitle="@{film}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/film_poster_image"
                app:layout_constraintTop_toTopOf="@+id/film_poster_image"
                tools:text="Black Adam" />

            <TextView
                android:id="@+id/film_sinopse"
                style="@style/TextAppearance.AppCompat.NormalText"
                filmSinopse="@{film}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:maxLines="5"
                app:layout_constraintBottom_toTopOf="@+id/film_rating"
                app:layout_constraintEnd_toEndOf="@+id/film_title"
                app:layout_constraintStart_toStartOf="@+id/film_title"
                app:layout_constraintTop_toBottomOf="@+id/film_title"
                tools:text="@tools:sample/lorem/random" />

            <TextView
                android:id="@+id/film_rating"
                style="@style/TextAppearance.AppCompat.NormalText.Drawable"
                filmRating="@{film}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:drawableStartCompat="@drawable/ic_rating_film"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/film_title"
                tools:text="7.1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>